= form_for(@document) do |f|
  = render 'shared/error_messages', :target => @document
  
  %fieldset
    %legend Basic Info
  
    
    .field
      = f.label :title
      %br
      = f.text_field :title
      
    .field
      = f.label :body
      %br
      = f.text_area :body
      
    .field
      = f.collection_select :category_id, Category.all, :id, :name, :prompt => "Select a category."
      
  
  .submit_button= f.submit
      