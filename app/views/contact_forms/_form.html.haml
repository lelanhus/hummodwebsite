= form_for @contact_form do |f|
  %fieldset
    %legend Your Information
    .fields
      = f.label :name
      %br
      = f.text_field :name
    .fields
      = f.label :email
      %br
      = f.text_field :email
    
    %legend Your Message
    .fields
      = f.label :subject
      %br
      = f.text_field :subject
    .fields
      = f.label :message
      %br
      = f.text_area :message

  %p= f.submit "Send Message"