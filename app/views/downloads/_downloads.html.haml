- @downloads.each do |download|
  %section.home_download
    %header
      %h1= link_to download.name, download_path(download)
      %h2= download.category.name
    %p
    = download.description
    - if download.category.name == "Modeler"
      = link_to "Download", package_download_path(download, :modeler => true), :class => :download_link
    - else
      = link_to "Download", package_download_path(download), :class => :download_link